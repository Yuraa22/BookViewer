{{> header}}

<div class="container h-100">
    <div class="row h-100 justify-content-center">
        <div class="col-md-12 table-responsive">
            <h2>Book - {{book_title}}</h2>
            <table id="pageTable" class="table">
                <thead>
                    <th>ISBN</th>
                    <th>Page number</th>
                    <th>url</th>
                </thead>
                <tbody>
                {{#pages}}
                    <tr>
                        <td>{{isbn}}</td>
                        <td>{{number}}</td>
                        <td>
                            <a href="{{url}}"">
                                <div class="ellipsis">{{url}}</div>
                            </a>
                        </td>
                    </tr>
                {{/pages}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{> footer}}